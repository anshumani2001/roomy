<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <div class="mb-2 mt-2"><h1>All Rooms</h1></div>
    

    <% for( let room of rooms ) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(room.images.length){ %>
                        <img src="<%=room.images[0].url%>" alt="" class="img-fluid">
                        <% }else{ %>
                            <img src="https://res.cloudinary.com/dus522prm/image/upload/v1624631502/Roomy/jooj3qvxmzuudlzntqzj.jpg"
                                alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= room.PGname %>
                        </h5>
                        <p class="card-text">
                            <%= room.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= room.location %>
                            </small>
                        </p>
                        <a href="/rooms/<%= room.id %> " class="btn btn-primary">View <%= room.PGname %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const rooms = {features: <%-JSON.stringify(rooms) %>};
            </script>
            <script src="/javascripts/clusterMap.js"></script>